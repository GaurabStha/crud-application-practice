<div class="row text-center align-items-center mt-2">
    <div class="container">
        <h2 class="mb-5">Book list from database</h2>
        <% if(messages.success){ %>
            <span class="bg-success text-white"><%= messages.success %></span>
            <% } %>
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>Book Name</th>
                            <th>ISBN</th>
                            <th>Author</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <% lists.forEach(function(list){ %>
                        <tbody>
                            <tr>
                                <td>
                                    <%= list.name %>
                                </td>
                                <td>
                                    <%= list.isbn %>
                                </td>
                                <td>
                                    <%= list.author %>
                                </td>
                                <td>
                                    <button class="btn btn-primary"><a class="text-white" href="/edit/<%= list.id %>">Edit</a></button>
                                    <button class="btn btn-danger ml-3"><a class=" text-white" href="/delete/<%= list.id %>">Delete</a></button>
                                </td>
                            </tr>
                        </tbody>
                        <% }); %>
                </table>
    </div>
</div>